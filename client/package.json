    "@types/redux-thunk": "2.1.0",
    "@types/uuid": "^3.0.0",
    "@types/webpack": "3.0.4",
    "awesome-typescript-loader": "^3.2.3",
    "babel": "^6.23.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.1",

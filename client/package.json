  "devDependencies": {
    "@types/history": "4.6.0",
    "@types/react": "16.0.0",
    "@types/react-dom": "15.5.2",
    "@types/react-redux": "4.4.47",
    "@types/react-router": "4.0.14",
    "@types/redux-actions": "1.2.6",

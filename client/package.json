    "lint:ts": "tslint './src/**/*.ts*' --format stylish --force",
    "lint:styl": "stylelint ./src/**/*.styl",
    "start": "webpack-dev-server",
    "test": "jest --watch --coverage"
  },
  "dependencies": {
    "bootstrap": "^3.3.7",

@import "../../../css/styles/style";
@import url("//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap-glyphicons.css");
header
    height rem-calc(100px)
    background-color nav-color
    color noc-color
    box-shadow 10px 0 0 rgba(0,0,0,0.5)
    top 0
    left 0
    right 0;
    position fixed
    min-width  450px;
    z-index 10
    @extend .cf
    .container
        padding-top 10px
        display flex
        justify-content space-between
        width 100%
        height 100%
        box-sizing border-box
        padding-left rem-calc(10px)
        padding-right rem-calc(10px)
        .header-logo
            padding-left 10px
            width 25%
            min-width 150px
        .header-menu
            width 50%
            min-width 200px
        .logo, .menu
            line-height rem-calc(50px)
            margin 0
            font-weight 300
            font-size rem-calc(30px)
        .menu
            text-align right
            margin-right 10px
            button
                position relative
                font-weight 300
                background-color transparent
                border-color transparent
                &:focus
                    outline none
                &:after
                    .glyphicon
                        color lightness(sonic-color, 20%)
                &:hover
                    bottom-border-color lightness(noc-color, 20%)
                    &:after
                        opacity 1
                        width 100%

                span
                    min-width 50px;
                   .glyphicon
                        top 5px
                        left 6px
                        font-size rem-calc(40px)
            input
                padding-left 10px
                border-color noc-color
                border-width 3px
                margin-bottom 10px
                line-height rem-calc(50px)

                +placeholder()
                     color sonic-color


